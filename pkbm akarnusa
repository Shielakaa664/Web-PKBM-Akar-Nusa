    <!-- JavaScript -->
    <script>
        // ============================================
        // VARIABEL GLOBAL UNTUK MENYIMPAN FOTO
        // ============================================
        let uploadedPhotos = JSON.parse(localStorage.getItem('pkbmPhotos')) || [
            {
                id: 1,
                title: "Kegiatan Pramuka",
                description: "Siswa sedang mengikuti kegiatan kepramukaan",
                category: "kegiatan",
                url: "PRAMUKA.jpeg",
                date: "2024-03-15",
                likes: 0
            },
            {
                id: 2,
                title: "Prestasi Seni",
                description: "Pertunjukan seni dan musik siswa",
                category: "prestasi",
                url: "https://images.unsplash.com/photo-1511379938547-c1f69419868d?ixlib=rb-4.0.3&auto=format&fit=crop&w=1170&q=80",
                date: "2024-02-20",
                likes: 0
            },
            {
                id: 3,
                title: "Kegiatan Olahraga",
                description: "Turnamen sepak bola antar kelas",
                category: "kegiatan",
                url: "https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1170&q=80",
                date: "2023-11-05",
                likes: 0
            }
        ];

        // Variabel untuk pagination
        let currentFilter = 'all';
        let visibleCount = 6;
        const photosPerLoad = 6;

        // ============================================
        // VARIABEL DAN FUNGSI ADMIN
        // ============================================
        let isAdmin = false;
        const ADMIN_USERNAME = "admin";
        const ADMIN_PASSWORD = "admin123"; // Password disembunyikan
        
        // ============================================
        // FUNGSI ADMIN: LOGIN, LOGOUT, AKSES
        // ============================================
        
        // Fungsi untuk menampilkan modal login
        function showAdminLogin() {
            // Kosongkan input fields
            document.getElementById('adminUsername').value = '';
            document.getElementById('adminPassword').value = '';
            document.getElementById('adminLoginModal').style.display = 'flex';
        }
        
        // Fungsi untuk menutup modal login
        function closeAdminModal() {
            document.getElementById('adminLoginModal').style.display = 'none';
        }
        
        // Fungsi untuk login admin
        function loginAdmin() {
            const username = document.getElementById('adminUsername').value.trim();
            const password = document.getElementById('adminPassword').value.trim();
            
            if (!username || !password) {
                showAlert('warning', 'Harap isi username dan password!');
                return;
            }
            
            if (username === ADMIN_USERNAME && password === ADMIN_PASSWORD) {
                isAdmin = true;
                closeAdminModal();
                
                // Tampilkan indikator admin
                document.getElementById('adminIndicator').style.display = 'flex';
                
                // Ubah tombol admin
                document.getElementById('adminBtn').innerHTML = '';
                document.getElementById('adminBtn').title = 'Logout Admin';
                
                // Unlock upload section
                unlockUploadSection();
                
                // Reload galeri untuk menampilkan tombol hapus
                loadGallery(currentFilter);
                
                // Simpan status login
                localStorage.setItem('adminLoggedIn', 'true');
                
                showAlert('success', 'Login admin berhasil! Anda sekarang dapat mengupload dan menghapus foto.');
            } else {
                showAlert('warning', 'Username atau password salah!');
                // Kosongkan password field untuk keamanan
                document.getElementById('adminPassword').value = '';
            }
        }
        
        // Fungsi untuk logout admin
        function logoutAdmin() {
            if (confirm('Logout dari mode admin?')) {
                isAdmin = false;
                
                // Sembunyikan indikator admin
                document.getElementById('adminIndicator').style.display = 'none';
                
                // Ubah tombol admin
                document.getElementById('adminBtn').innerHTML = '';
                document.getElementById('adminBtn').title = 'Admin Mode';
                
                // Lock upload section
                lockUploadSection();
                
                // Reload galeri untuk menghilangkan tombol hapus
                loadGallery(currentFilter);
                
                // Hapus status login
                localStorage.removeItem('adminLoggedIn');
                
                showAlert('info', 'Anda telah logout dari mode admin.');
            }
        }
        
        // Fungsi lock/unlock upload section
        function lockUploadSection() {
            const uploadSection = document.getElementById('upload');
            uploadSection.classList.add('locked');
            
            // Hapus overlay lama jika ada
            const oldOverlay = uploadSection.querySelector('.lock-overlay');
            if (oldOverlay) oldOverlay.remove();
            
            // Tambah overlay baru
            const lockOverlay = document.createElement('div');
            lockOverlay.className = 'lock-overlay';
            lockOverlay.innerHTML = `
                <div class="lock-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <h3 style="color: var(--primary-color); margin-bottom: 15px;">Akses Terbatas</h3>
                <p style="color: #666; margin-bottom: 20px;">Hanya admin yang dapat mengupload foto ke galeri.</p>
                <button onclick="showAdminLogin()" class="btn" style="background: var(--secondary-color);">
                    <i class="fas fa-key"></i> Login Sebagai Admin
                </button>
            `;
            uploadSection.appendChild(lockOverlay);
            
            // Nonaktifkan input upload
            document.getElementById('photoInput').disabled = true;
            document.getElementById('uploadBtn').disabled = true;
            document.getElementById('uploadBtn').innerHTML = '<i class="fas fa-lock"></i> Login untuk Upload';
        }
        
        function unlockUploadSection() {
            const uploadSection = document.getElementById('upload');
            uploadSection.classList.remove('locked');
            
            // Hapus overlay
            const lockOverlay = uploadSection.querySelector('.lock-overlay');
            if (lockOverlay) lockOverlay.remove();
            
            // Aktifkan input upload
            document.getElementById('photoInput').disabled = false;
            document.getElementById('uploadBtn').disabled = false;
            document.getElementById('uploadBtn').innerHTML = '<i class="fas fa-cloud-upload-alt"></i> Upload Foto';
        }
        
        // ============================================
        // FUNGSI UNTUK GALERI FOTO (DENGAN TOMBOL HAPUS)
        // ============================================
        function loadGallery(filter = 'all') {
            const gallery = document.getElementById('photoGallery');
            gallery.innerHTML = '';
            
            // Filter foto berdasarkan kategori
            let filteredPhotos = uploadedPhotos;
            if (filter !== 'all') {
                filteredPhotos = uploadedPhotos.filter(photo => photo.category === filter);
            }
            
            // Tampilkan foto (dibatasi jumlahnya)
            const photosToShow = filteredPhotos.slice(0, visibleCount);
            
            if (photosToShow.length === 0) {
                gallery.innerHTML = `
                    <div style="grid-column: 1 / -1; text-align: center; padding: 40px;">
                        <i class="fas fa-images" style="font-size: 3rem; color: #ccc; margin-bottom: 20px;"></i>
                        <p style="color: #666; font-size: 1.1rem;">Belum ada foto untuk kategori ini</p>
                    </div>
                `;
                return;
            }
            
            photosToShow.forEach(photo => {
                const photoItem = document.createElement('div');
                photoItem.className = 'gallery-item';
                photoItem.setAttribute('data-category', photo.category);
                
                // Tentukan apakah tombol hapus akan ditampilkan
                const deleteButton = isAdmin ? `
                    <div style="text-align: center; margin-top: 10px;">
                        <button onclick="deletePhoto(${photo.id})" class="delete-btn">
                            <i class="fas fa-trash"></i> Hapus Foto
                        </button>
                    </div>
                ` : '';
                
                photoItem.innerHTML = `
                    <img src="${photo.url}" alt="${photo.title}" class="gallery-img" 
                         onerror="this.src='https://images.unsplash.com/photo-1523050854058-8df90110c9f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=60'">
                    <div class="gallery-caption">
                        <h4>${photo.title}</h4>
                        <p>${photo.description}</p>
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 10px;">
                            <span style="background: #e9f7fe; color: var(--secondary-color); padding: 3px 8px; border-radius: 12px; font-size: 0.8rem;">
                                ${getCategoryLabel(photo.category)}
                            </span>
                            <span style="font-size: 0.8rem; color: #666;">
                                ${formatDate(photo.date)}
                            </span>
                        </div>
                        ${deleteButton}
                    </div>
                `;
                gallery.appendChild(photoItem);
            });
            
            // Tampilkan/sembunyikan tombol "Load More"
            const loadMoreBtn = document.getElementById('loadMoreBtn');
            const noMorePhotos = document.getElementById('noMorePhotos');
            
            if (filteredPhotos.length > visibleCount) {
                loadMoreBtn.style.display = 'inline-block';
                noMorePhotos.style.display = 'none';
            } else {
                loadMoreBtn.style.display = 'none';
                if (visibleCount > photosPerLoad) {
                    noMorePhotos.style.display = 'block';
                }
            }
        }
        
        // FUNGSI HAPUS FOTO (Hanya untuk admin)
        function deletePhoto(id) {
            if (!isAdmin) {
                showAlert('warning', 'Hanya admin yang bisa menghapus foto!');
                showAdminLogin();
                return;
            }
            
            if (confirm('Hapus foto ini?')) {
                uploadedPhotos = uploadedPhotos.filter(photo => photo.id !== id);
                localStorage.setItem('pkbmPhotos', JSON.stringify(uploadedPhotos));
                loadGallery(currentFilter);
                showAlert('success', 'Foto berhasil dihapus!');
            }
        }
        
        // ============================================
        // FUNGSI UNTUK PREVIEW GAMBAR (Dengan cek admin)
        // ============================================
        function previewImages() {
            // Cek apakah user adalah admin
            if (!isAdmin) {
                showAlert('warning', 'Hanya admin yang dapat mengupload foto!');
                showAdminLogin();
                document.getElementById('photoInput').value = '';
                return;
            }
            
            const preview = document.getElementById('imagePreview');
            const files = document.getElementById('photoInput').files;
            
            preview.innerHTML = '';
            
            if (files) {
                Array.from(files).forEach((file, index) => {
                    if (index >= 10) return; // Batasi preview maksimal 10 gambar
                    
                    if (file.type.startsWith('image/')) {
                        // Validasi ukuran file (maksimal 5MB)
                        if (file.size > 5 * 1024 * 1024) {
                            showAlert('warning', `File ${file.name} terlalu besar (maksimal 5MB)`);
                            return;
                        }
                        
                        const reader = new FileReader();
                        
                        reader.onload = function(e) {
                            const previewItem = document.createElement('div');
                            previewItem.className = 'preview-item';
                            previewItem.innerHTML = `
                                <img src="${e.target.result}" class="preview-img" alt="Preview">
                                <button type="button" class="remove-btn" onclick="this.parentElement.remove();">
                                    <i class="fas fa-times"></i>
                                </button>
                            `;
                            preview.appendChild(previewItem);
                        }
                        
                        reader.readAsDataURL(file);
                    }
                });
            }
        }
        
        // ============================================
        // FUNGSI UNTUK UPLOAD FOTO (Hanya untuk admin)
        // ============================================
        function uploadPhotos() {
            // Cek apakah user adalah admin
            if (!isAdmin) {
                showAlert('warning', 'Hanya admin yang dapat mengupload foto!');
                showAdminLogin();
                return;
            }
            
            const title = document.getElementById('photoTitle').value.trim();
            const description = document.getElementById('photoDescription').value.trim();
            const category = document.getElementById('photoCategory').value;
            const files = document.getElementById('photoInput').files;
            
            // Validasi
            if (!title || !description || !category || files.length === 0) {
                showAlert('warning', 'Harap isi semua field dan pilih foto!');
                return;
            }
            
            // Tampilkan progress bar
            const progressContainer = document.getElementById('uploadProgress');
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            
            progressContainer.style.display = 'block';
            progressBar.style.width = '0%';
            progressText.textContent = 'Mempersiapkan upload...';
            
            let uploadedCount = 0;
            const totalFiles = files.length;
            
            Array.from(files).forEach((file, index) => {
                if (file.type.startsWith('image/')) {
                    // Validasi ukuran file
                    if (file.size > 5 * 1024 * 1024) {
                        showAlert('warning', `File ${file.name} terlalu besar (maksimal 5MB)`);
                        uploadedCount++;
                        updateProgress(uploadedCount, totalFiles);
                        return;
                    }
                    
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        const newPhoto = {
                            id: Date.now() + index,
                            title: totalFiles > 1 ? `${title} (${index + 1})` : title,
                            description: description,
                            category: category,
                            url: e.target.result,
                            filename: file.name,
                            date: new Date().toISOString().split('T')[0],
                            likes: 0,
                            size: file.size,
                            uploadedAt: new Date().toLocaleString('id-ID')
                        };
                        
                        uploadedPhotos.unshift(newPhoto);
                        uploadedCount++;
                        
                        // Update progress bar
                        updateProgress(uploadedCount, totalFiles);
                        
                        // Simpan ke localStorage
                        if (uploadedCount === totalFiles) {
                            localStorage.setItem('pkbmPhotos', JSON.stringify(uploadedPhotos));
                            
                            // Update galeri
                            loadGallery(currentFilter);
                            
                            // Tampilkan notifikasi
                            setTimeout(() => {
                                showAlert('success', `Berhasil mengupload ${totalFiles} foto!`);
                                clearUploadForm();
                                progressContainer.style.display = 'none';
                            }, 500);
                        }
                    }
                    
                    reader.readAsDataURL(file);
                } else {
                    uploadedCount++;
                    updateProgress(uploadedCount, totalFiles);
                }
            });
        }
        
        function updateProgress(current, total) {
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            
            const percentage = Math.round((current / total) * 100);
            progressBar.style.width = `${percentage}%`;
            progressText.textContent = `Mengupload ${current} dari ${total} foto (${percentage}%)`;
        }
        
        function clearUploadForm() {
            document.getElementById('uploadForm').reset();
            document.getElementById('imagePreview').innerHTML = '';
            document.getElementById('uploadProgress').style.display = 'none';
        }
        
        // ============================================
        // FUNGSI BANTUAN
        // ============================================
        function getCategoryLabel(category) {
            const labels = {
                'kegiatan': 'Kegiatan',
                'prestasi': 'Prestasi',
                'lainnya': 'Lainnya'
            };
            return labels[category] || category;
        }
        
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('id-ID', {
                day: 'numeric',
                month: 'long',
                year: 'numeric'
            });
        }
        
        function showAlert(type, message) {
            // Hapus notifikasi lama
            const oldAlert = document.querySelector('.alert-notification');
            if (oldAlert) oldAlert.remove();
            
            // Buat notifikasi baru
            const alert = document.createElement('div');
            alert.className = `alert-notification alert-${type}`;
            alert.innerHTML = `
                <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-triangle'}"></i>
                <span>${message}</span>
            `;
            
            document.body.appendChild(alert);
            
            // Hapus otomatis setelah 5 detik
            setTimeout(() => {
                alert.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => alert.remove(), 300);
            }, 5000);
        }
        
        // ============================================
        // FUNGSI KIRIM WHATSAPP
        // ============================================
        function sendToWhatsApp() {
            const nama = document.getElementById('nama').value.trim();
            const email = document.getElementById('email').value.trim();
            const subjek = document.getElementById('subjek').value.trim();
            const pesan = document.getElementById('pesan').value.trim();
            
            // Validasi form
            if (!nama || !email || !subjek || !pesan) {
                showAlert('warning', 'Harap isi semua field yang bertanda *');
                return;
            }
            
            // Validasi email
            if (!validateEmail(email)) {
                showAlert('warning', 'Format email tidak valid. Contoh: nama@gmail.com');
                return;
            }
            
            // Format pesan WhatsApp
            const text = `*PESAN DARI WEBSITE PKBM AKAR NUSA PANINGGARAN*

 *DATA PENGIRIM:*
 Nama: ${nama}
 Email: ${email}
 Subjek: ${subjek}

 *ISI PESAN:*
${pesan}

---
 *Dikirim dari website PKBM AKAR NUSA*
 *Tanggal: ${new Date().toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })}*
 *Waktu: ${new Date().toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' })} WIB*`;
            
            // Encode untuk URL
            const encodedText = encodeURIComponent(text);
            
            // Nomor WhatsApp PKBM
            const phoneNumber = '6285290889298';
            
            // Buat URL WhatsApp
            const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodedText}`;
            
            // Tampilkan konfirmasi
            if (confirm(`Kirim pesan ke WhatsApp PKBM (0852-9088-9298)?\n\nNama: ${nama}\nEmail: ${email}\nSubjek: ${subjek}`)) {
                // Tampilkan loading
                const btn = document.querySelector('.whatsapp-btn');
                const originalHTML = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Membuka WhatsApp...';
                btn.disabled = true;
                
                // Buka WhatsApp
                setTimeout(() => {
                    window.open(whatsappUrl, '_blank');
                    
                    // Tampilkan notifikasi
                    showAlert('success', 'WhatsApp sedang dibuka... Silakan klik "Kirim" di WhatsApp.');
                    
                    // Reset tombol
                    setTimeout(() => {
                        btn.innerHTML = originalHTML;
                        btn.disabled = false;
                    }, 2000);
                    
                    // Reset form (opsional)
                    setTimeout(() => {
                        document.getElementById('messageForm').reset();
                    }, 3000);
                }, 1000);
            }
        }
        
        function validateEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }
        
        // ============================================
        // INISIALISASI SAAT HALAMAN DIMUAT
        // ============================================
        document.addEventListener('DOMContentLoaded', function() {
            // Buat indikator admin
            const adminIndicator = document.createElement('div');
            adminIndicator.id = 'adminIndicator';
            adminIndicator.className = 'admin-indicator';
            adminIndicator.innerHTML = '<i class="fas fa-user-shield"></i> Admin Mode';
            document.body.appendChild(adminIndicator);
            
            // Buat tombol admin
            const adminBtn = document.createElement('button');
            adminBtn.id = 'adminBtn';
            adminBtn.className = 'admin-btn';
            adminBtn.innerHTML = '';
            adminBtn.title = 'Admin Mode';
            adminBtn.onclick = function() {
                if (!isAdmin) {
                    showAdminLogin();
                } else {
                    logoutAdmin();
                }
            };
            document.body.appendChild(adminBtn);
            
            // Cek apakah user sudah login sebagai admin
            if (localStorage.getItem('adminLoggedIn') === 'true') {
                isAdmin = true;
                adminIndicator.style.display = 'flex';
                adminBtn.innerHTML = '';
                adminBtn.title = 'Logout Admin';
                unlockUploadSection();
            } else {
                // Lock upload section untuk user biasa
                lockUploadSection();
            }
            
            // Load galeri foto
            loadGallery();
            
            // Set tahun di copyright
            document.getElementById('currentYear').textContent = new Date().getFullYear();
            
            // Event listener untuk preview gambar
            document.getElementById('photoInput').addEventListener('change', previewImages);
            
            // Event listener untuk filter galeri
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    // Update class active
                    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Filter galeri
                    currentFilter = this.getAttribute('data-filter');
                    visibleCount = photosPerLoad;
                    loadGallery(currentFilter);
                });
            });
            
            // Event listener untuk load more
            document.getElementById('loadMoreBtn').addEventListener('click', function() {
                visibleCount += photosPerLoad;
                loadGallery(currentFilter);
            });
            
            // Mobile menu
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const navLinks = document.getElementById('navLinks');
            
            if (mobileMenuBtn && navLinks) {
                mobileMenuBtn.addEventListener('click', function() {
                    navLinks.classList.toggle('active');
                    const icon = this.querySelector('i');
                    if (icon.classList.contains('fa-bars')) {
                        icon.classList.replace('fa-bars', 'fa-times');
                    } else {
                        icon.classList.replace('fa-times', 'fa-bars');
                    }
                });
                
                // Tutup menu saat klik link
                document.querySelectorAll('.nav-links a').forEach(link => {
                    link.addEventListener('click', () => {
                        navLinks.classList.remove('active');
                        mobileMenuBtn.querySelector('i').classList.replace('fa-times', 'fa-bars');
                    });
                });
            }
            
            // Scroll effect untuk header
            window.addEventListener('scroll', function() {
                const header = document.getElementById('mainHeader');
                if (window.scrollY > 50) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });
            
            // Enter key untuk form WhatsApp
            document.getElementById('messageForm').addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && e.target.type !== 'textarea') {
                    e.preventDefault();
                    if (e.target.id === 'pesan') {
                        sendToWhatsApp();
                    }
                }
            });
            
            // Tutup modal admin saat klik di luar
            document.getElementById('adminLoginModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeAdminModal();
                }
            });
            
            // Tutup modal dengan tombol ESC
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeAdminModal();
                }
            });
            
            // Validasi saat user menekan Enter di form login
            document.getElementById('adminLoginModal').addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && (e.target.id === 'adminUsername' || e.target.id === 'adminPassword')) {
                    loginAdmin();
                }
            });
            
            console.log("Website PKBM AKAR NUSA siap digunakan!");
            console.log(`Total foto tersimpan: ${uploadedPhotos.length}`);
            console.log("Fitur admin aktif! Upload dan hapus hanya untuk admin.");
            console.log("Info login admin ada di kode JavaScript");
        });
    </script>
</body>
</html>
